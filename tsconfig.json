{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": "/",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "strictNullChecks": false,
    "resolveJsonModule": true, // Allows importing JSON files as modules (if needed)
    "esModuleInterop": true,  // Enables `import` statements for non-ES modules
    "moduleResolution": "node"  // Helps to resolve modules correctly
  }
}

